<main class="note-form">
  <h1>Edit Note</h1>

  <%= form_for @note do |f| %>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :body %>
      <%= f.text_area :body, rows: 10, cols: 50 %>
    </div>
    <%= f.submit 'Update Note', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Back', notes_path, class: 'btn btn-secondary' %>
</main>
