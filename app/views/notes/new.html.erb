<main>
    <h1>New Note</h1>

    <%= form_for :note, url: '/notes', method: :post do |f| %>
        <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
        </div>
        <div>
        <%= f.label :body %>
        <%= f.text_area :body, rows: 10, cols: 50 %>
        </div>
        <%= f.submit 'Create Note' %>
    <% end %>
</main>
